<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="RhythmBeatPersistence">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>edu.artificial.rhythmbeat.dal.Artist</class>
        <class>edu.artificial.rhythmbeat.dal.Track</class>
        <class>edu.artificial.rhythmbeat.dal.UserTrack</class>


        <properties>

            <property name="eclipselink.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=RhythmBeat"/>
            <property name="eclipselink.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="eclipselink.jdbc.user" value="owner"/>
            <property name="eclipselink.jdbc.password" value="123456"/>
            <property name="hibernate.connection.url" value="jdbc:sqlserver://localhost:1433;databaseName=RhythmBeat"/>
            <property name="hibernate.connection.driver_class" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="hibernate.connection.username" value="owner"/>
            <property name="hibernate.connection.password" value="123456"/>
            <property name="openjpa.ConnectionURL" value="jdbc:sqlserver://localhost:1433;databaseName=RhythmBeat"/>
            <property name="openjpa.ConnectionDriverName" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>

            <property name="toplink.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=RhythmBeat"/>
            <property name="toplink.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="toplink.jdbc.user" value="123456"/>
            <property name="toplink.jdbc.password" value="123456"/>
        </properties>
    </persistence-unit>
</persistence>
